{% extends 'base.html.twig' %}

{% block title %}Véhicules d'occasion - CB Automobiles{% endblock %}

{% block body %}

<section class="py-5" style="background: linear-gradient(135deg, rgba(0,60,113,0.9) 0%, rgba(30,90,168,0.8) 100%), url('https://images.unsplash.com/photo-1562141961-aeec36ca9c39?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row align-items-center text-white">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Occasion</h1>
                <p class="lead mb-4">Toutes nos marques</p>
                <p>Lorem adipiscing ultrices vitae habitasse tellus dignissim et lorem tellus fermentum et lorem tellus dignissim accumsan vel ultrices elit.</p>
                <div class="mt-4">
                    <span class="badge bg-light text-dark fs-6 me-2">Un sous titre accrocheur</span>
                    <span class="badge bg-light text-dark fs-6">pour la page occasion</span>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="position-relative">
                    <img src="https://images.unsplash.com/photo-1617788138017-80ad40651399?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" 
                         class="img-fluid rounded shadow-lg" alt="Véhicule d'occasion" style="max-height: 400px; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-4 bg-light border-bottom">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-wrap gap-3 align-items-center">
                    <div class="flex-grow-1">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Rechercher...">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary">Nouveautés</button>
                        <button class="btn btn-outline-secondary">Petit prix</button>
                        <button class="btn btn-warning">Pépites</button>
                    </div>
                    <div class="text-end">
                        <span class="text-muted">Mon comparateur</span>
                        <div class="text-muted">{{ vehicles|length }} résultats</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="position-sticky" style="top: 2rem;">
                    <h5 class="mb-4">Filtres</h5>
                    
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">Trier par</h6>
                        </div>
                        <div class="card-body">
                            <select class="form-select">
                                <option>Prix croissant</option>
                                <option>Prix décroissant</option>
                                <option>Année récente</option>
                                <option>Kilométrage</option>
                            </select>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">Prix</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" placeholder="Min">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control form-control-sm" placeholder="Max">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">Modèle</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="golf">
                                <label class="form-check-label" for="golf">Golf</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="tiguan">
                                <label class="form-check-label" for="tiguan">Tiguan</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="passat">
                                <label class="form-check-label" for="passat">Passat</label>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">Marque</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="volkswagen">
                                <label class="form-check-label" for="volkswagen">Volkswagen</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="audi">
                                <label class="form-check-label" for="audi">Audi</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="seat">
                                <label class="form-check-label" for="seat">SEAT</label>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">Type</h6>
                        </div>
                        <div class="card-body">
                            <select class="form-select">
                                <option>Tous</option>
                                <option>Berline</option>
                                <option>Break</option>
                                <option>SUV</option>
                                <option>Coupé</option>
                            </select>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">Énergie</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="essence">
                                <label class="form-check-label" for="essence">Essence</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="diesel">
                                <label class="form-check-label" for="diesel">Diesel</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="electrique">
                                <label class="form-check-label" for="electrique">Électrique</label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-lg-9">
                <div class="row g-4">
                    {% for vehicle in vehicles %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card border-0 shadow-sm h-100 vehicle-card">
                            <div class="position-relative">
                                <img src="{{ vehicle.image }}" class="card-img-top" alt="{{ vehicle.name }}" style="height: 200px; object-fit: cover;">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <button class="btn btn-light btn-sm rounded-circle">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="btn btn-light btn-sm rounded-circle ms-1">
                                        <i class="fas fa-share"></i>
                                    </button>
                                </div>
                                {% if loop.index <= 3 %}
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-primary">Disponible</span>
                                </div>
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Prix €</h5>
                                <h6 class="text-primary fw-bold fs-5">{{ vehicle.price|number_format(0, '.', ' ') }} €</h6>
                                <h6 class="card-subtitle mb-2 text-muted">Nom de la voiture</h6>
                                <p class="card-text">{{ vehicle.name }}</p>
                                
                                <div class="d-flex justify-content-between text-muted small mb-3">
                                    <span>{{ vehicle.year }}</span>
                                    <span>{{ vehicle.fuel }}</span>
                                    <span>{{ vehicle.mileage|number_format(0, '.', ' ') }} km</span>
                                </div>

                                <p class="card-text small text-muted">
                                    Retrouvez ce modèle sur le site Spirit requisque quia illum détails enim sunt qui custidorem feugiat , lectus aliquam dui dolor, sed dictas.
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="{{ path('app_produit', {id: vehicle.id}) }}" class="btn btn-dark btn-sm w-100">En savoir plus</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                    <div class="col-lg-4 col-md-6">
                        <div class="card border-0 shadow-sm h-100 vehicle-card">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1606664515524-ed2f786a0bd6?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" class="card-img-top" style="height: 200px; object-fit: cover;">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <button class="btn btn-light btn-sm rounded-circle">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="btn btn-light btn-sm rounded-circle ms-1">
                                        <i class="fas fa-share"></i>
                                    </button>
                                </div>
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-warning text-dark">Premium</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Prix €</h5>
                                <h6 class="text-primary fw-bold fs-5">35 900 €</h6>
                                <h6 class="card-subtitle mb-2 text-muted">Voiture</h6>
                                <p class="card-text">Marque</p>
                                
                                <div class="d-flex justify-content-between text-muted small mb-3">
                                    <span>2023</span>
                                    <span>Diesel</span>
                                    <span>8 200 km</span>
                                </div>

                                <p class="card-text small text-muted">
                                    Retrouvez ce modèle sur le site Spirit requisque quia illum détails enim sunt qui custidorem feugiat.
                                </p>

                                <a href="#" class="btn btn-dark btn-sm w-100">En savoir plus</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<style>
.vehicle-card {
    transition: transform 0.3s ease;
}

.vehicle-card:hover {
    transform: translateY(-5px);
}
</style>

{% endblock %}